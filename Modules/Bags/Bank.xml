<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="Bank.lua" />

    <Frame name="ReduxUI_BankFrame" mixin="BankMixin" parent="UIParent" inherits="BagFrameTemplate">
        <Size x="384" y="512" />
        <Anchors>
            <Anchor point="BOTTOMLEFT" x="100" y="100"/>
        </Anchors>

        <Frames>
            <Button name="$parentTab1" parentKey="BankTab" inherits="CharacterFrameTabButtonTemplate" id="1" text="BANK">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="11" y ="2"/>
                </Anchors>
                <Scripts>
                    <OnClick function="ReduxUI_BankFrame_TabOnClick"/>
                </Scripts>
            </Button>
            <Button name="$parentTab2" parentKey="ReagentsTab" inherits="CharacterFrameTabButtonTemplate" id="2" text="REAGENT_BANK">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT" x="-15" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick function="ReduxUI_BankFrame_TabOnClick"/>
                </Scripts>
            </Button>
            <Button parentKey="DespositButton" inherits="UIPanelButtonTemplate" virtual="true" text="REAGENTBANK_DEPOSIT" hidden="true">
                <Size x="166" y="20"/>
                <Anchors>
                    <Anchor point="BOTTOM" relativePoint="BOTTOM" x="0" y="4"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        PlaySound(SOUNDKIT.IG_MAINMENU_OPTION)
                        DepositReagentBank()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>

        <Scripts>
            <OnLoad function="ReduxUI_BankFrame_OnLoad" />
            <OnHide function="ReduxUI_BankFrame_OnHide" />
        </Scripts>
    </Frame>
</Ui>
